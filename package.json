{
  "name": "rue",
  "version": "1.0.0",
  "description": "A vue framework that makes you feel like you're developing on rails (Rails on Vue = Rue)",
  "main": "index.js",
  "repository": "https://github.com/yukihirop/rue",
  "author": "yukihirop",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf packages/**/lib",
    "build": "yarn clean && yarn build:activemodel",
    "build:activemodel": "cd packages/activemodel && yarn build && cd -",
    "fmt": "prettier --write **/src/**/*.ts",
    "test": "yarn test:activemodel",
    "test:activemodel": "cd packages/activemodel && yarn test && cd -"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^4.1.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
